    },
    {
      "label": "Flutter: Build iOS",
      "type": "shell",
      "command": "flutter build ios",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Build Web",
      "type": "shell",
      "command": "flutter build web",
      "problemMatcher": [],
      "group": "build"
    },
    {
