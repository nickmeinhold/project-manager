rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Projects collection
    match /projects/{projectId} {
      // Users can only read/write their own projects
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Steps subcollection - inherit parent project's userId
      match /steps/{stepId} {
        allow read: if isAuthenticated() &&
                    get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
        // For writes, allow if authenticated. The parent project's security ensures only the owner can create/modify it.
        // We can't use get() here because in batch writes, the parent project might not exist yet.
        allow write: if isAuthenticated();
      }
    }

    // Notifications collection - users can only see their own notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // FCM Tokens collection - users can only manage their own tokens
    match /fcmTokens/{tokenId} {
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
  }
}
